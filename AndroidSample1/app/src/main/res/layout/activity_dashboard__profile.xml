<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pgpgpg" >
    
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pgpgpg" 
    tools:context="com.example.s525351.androidsample1.Dashboard_Profile" >

          <include layout="@layout/header_1" />
          

          <LinearLayout
              android:id="@+id/linearLayout1"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:layout_below="@+id/header"
              android:layout_centerHorizontal="true"
              android:background="@color/white" >

              <ImageView
                  android:id="@+id/imageView1"
                  android:layout_width="60dp"
                  android:layout_height="60dp"
                  android:layout_gravity="left|center_vertical"
                  android:layout_marginLeft="10dp"
                  android:src="@drawable/circle" />

              <LinearLayout
                  android:layout_width="200dp"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:orientation="vertical" >

                  <TextView
                      android:id="@+id/textView1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="left|center"
                      android:layout_marginLeft="10dp"
                      android:text="SigEp"
                      android:textSize="20sp" />

                  <TextView
                      android:id="@+id/textView2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="left|center"
                      android:layout_marginLeft="10dp"
                      android:text="Sigma Phi Epsilon"
                      android:textSize="20sp" />
              </LinearLayout>
          </LinearLayout>

          <TextView
              android:id="@+id/textView3"
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_below="@+id/linearLayout1"
              android:layout_centerHorizontal="true"
              android:background="@color/hash1" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_above="@+id/main"
              android:layout_below="@+id/linearLayout1"
              android:layout_centerHorizontal="true"
              android:background="#E6AAAAAA"
              android:orientation="vertical" >

              <RelativeLayout
                  android:id="@+id/accident"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="0.25">

                  <TextView
                      android:id="@+id/textView5"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:layout_centerVertical="true"
                      android:text="Accident"
                      android:textColor="@color/black"
                      android:textAppearance="?android:attr/textAppearanceMedium" />

                  <ImageView
                      android:id="@+id/imageView3"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:layout_marginRight="22dp"
                      android:src="@drawable/right_arrow" />
                  
              </RelativeLayout>
              
              <TextView
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_centerHorizontal="true"
              android:background="@color/hash1" />
              
               <RelativeLayout
                   android:id="@+id/rel_feeling_unsafe"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="0.25">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:layout_centerVertical="true"
                      android:text="Feeling Unsafe"
                       android:textColor="@color/black"
                      android:textAppearance="?android:attr/textAppearanceMedium" />

                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:layout_marginRight="22dp"
                      android:src="@drawable/right_arrow" />
              </RelativeLayout>
              
               <TextView
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_centerHorizontal="true"
              android:background="@color/hash1" />
              
                 <RelativeLayout
                     android:id="@+id/fight"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="0.25">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:layout_centerVertical="true"
                      android:text="Fight"
                       android:textColor="@color/black"
                      android:textAppearance="?android:attr/textAppearanceMedium" />

                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:layout_marginRight="22dp"
                      android:src="@drawable/right_arrow" />
              </RelativeLayout>
              
                 <TextView
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_centerHorizontal="true"
              android:background="@color/hash1" />
                 
                 <RelativeLayout
                     android:id="@+id/rel_other"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:onClick="onShowDialogWindow"
                  android:layout_weight="0.25">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:layout_centerVertical="true"
                      android:text="Other"
                       android:textColor="@color/black"
                      android:textAppearance="?android:attr/textAppearanceMedium" />

                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:layout_marginRight="22dp"
                      android:src="@drawable/right_arrow" />
                  
              </RelativeLayout>

          </LinearLayout>
    
 <LinearLayout
              android:id="@+id/main"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_alignParentBottom="true"
              android:layout_centerHorizontal="true"
              android:background="@color/red"
              android:gravity="center" >

              <TextView
                  android:id="@+id/txt_emergency"
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:gravity="center"
                  android:text="EMERGENCY"
                  android:textAppearance="?android:attr/textAppearanceLarge"
                  android:textColor="@color/white" />
          </LinearLayout>
         
</RelativeLayout>
<include layout="@layout/slidemenu1" />
</android.support.v4.widget.DrawerLayout>