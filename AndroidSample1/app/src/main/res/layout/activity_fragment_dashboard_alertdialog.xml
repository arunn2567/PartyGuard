<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.s525351.androidsample1.Fragment_dashboard_alertdialog" >

    <TextView
        android:id="@+id/lbl_your_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" 
        android:layout_marginTop="56dp"
        android:text="What is the situation?"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lbl_your_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:text="Other" 
 		android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txt_your_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lbl_your_name"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:lines="6"
        android:hint="Input"
    	android:gravity="top|left"
    	android:inputType="textMultiLine"
        android:background="@color/aash"
        android:imeOptions="actionDone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    
    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_your_name"
        android:background="@color/aash"
        android:layout_marginTop="3dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lbl_your_name"
        android:background="@color/aash"
        android:layout_marginTop="5dp"
        android:text="TextView" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txt_your_name"
        android:layout_below="@+id/textView12"
        android:text="Accept" />

    <Button
        android:id="@+id/btncancel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnSubmit"
        android:layout_alignBottom="@+id/btnSubmit"
        android:layout_alignLeft="@+id/txt_your_name"
        android:text="Cancel" />
    
</RelativeLayout>
